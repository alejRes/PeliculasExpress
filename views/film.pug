doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Film
    body 
        p Titulo: #{peli.Title}
        p Año: #{peli.Year}
        p Estreno: #{peli.Released}
        p Duración: #{peli.Runtime}
        p Género: #{peli.Genre}
        p Actores: #{peli.Actors}
        p Sinopsis: #{peli.Plot}
        img(src= peli.Poster, alt="cartelera") 
        p Premios: #{peli.Awards}   
